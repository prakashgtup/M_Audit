<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/single_auditor_title_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/assign_audit_subtitle_bg"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/single_Auditor_Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:gravity="left"
            android:padding="10dp"
            android:text="Lead"
            android:textColor="#000"
            android:textSize="@dimen/txt_sub_title" />


    </RelativeLayout>

    <com.maudit.utils.ExpandableHeightGridView
        android:id="@+id/single_auditor_gridView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#C4C3C9"
        android:gravity="center"
        android:horizontalSpacing="14dip"
        android:numColumns="6"
        android:padding="5dip"
        android:stretchMode="columnWidth"
        android:verticalSpacing="14dip" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_weight="0"
        android:background="#B9B9B9">

    </View>

</LinearLayout>
