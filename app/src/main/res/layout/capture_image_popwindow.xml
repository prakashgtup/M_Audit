<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/linearlayout_capture_container"
    android:background="@drawable/linearlayout_corner"
    android:orientation="vertical">

    <Button
        android:id="@+id/button_capture_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/btn_selector"
        android:padding="5dp"
        android:layout_marginTop="10dp"
        android:text="@string/capture_image"
        android:textAllCaps="false"
        android:textColor="#fff" />

    <Button
        android:id="@+id/button_select_image_gallery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/btn_selector"
        android:padding="5dp"
        android:text="@string/select_from_library"
        android:textAllCaps="false"
        android:textColor="#fff" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageview1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:padding="5dp"
            />

        <ImageView
            android:id="@+id/imageview2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="3dp"
            android:layout_weight="1"
            android:padding="5dp"
            />

        <ImageView
            android:id="@+id/imageview3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_marginLeft="3dp"
            android:padding="5dp"

            />
    </LinearLayout>

</LinearLayout>